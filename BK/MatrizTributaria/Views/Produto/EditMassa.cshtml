@using PagedList.Mvc
@using MatrizTributaria.Models
@model PagedList.IPagedList<MatrizTributaria.Models.Produto>
@{
    ViewBag.Title = "EditMassa";
}

<div class="container pr-container pr-card-cad">
    <div class="card mt-2">
        <div class="card-header">
            Alterar NCM de Produtos
            @RenderPage("~/Views/Acoes/BotaoHome.cshtml") <!--Renderiza os botões de ação-->
            <a data-toggle="tooltip" data-placement="right" title="Ir para gráficos" class="float-lg-right dis-block btn btn-secondary pr-botoes-fundo border-0" href="@Url.Action("GraficoAnaliseProdutos","Produto")"><i style="font-size:1.5em;" class="fas fa-chart-pie"></i>  </a>
            <button data-toggle="tooltip" data-placement="right" title="Alterar Selecionado(s)" type="button" id="editarSelecionados" class="float-lg-right dis-block btn btn-secondary pr-botoes-fundo border-0"> <i style="font-size:1.5em;" class="fas fa-edit"></i></button>

            @*<a data-toggle="tooltip" data-placement="right" title="Alterar Selecionado(s)" href="@Url.Action("Index", "Home")" class="float-lg-right dis-block btn btn-secondary pr-botoes-fundo border-0"><i style="font-size:1.5em;" class="fas fa-edit"></i></a>*@
        </div><!--fim do cabeçalho-->
        <div class="card-body">
            <div class="container">

                <div class="row">

                    <div class="col-lg-12">
                        <div class="container-fluid">
                            @using (Html.BeginForm("EditMassa", "Produto", FormMethod.Get))
                            {

                                <div style="margin-top:20px;" class="form-group row">


                                    <label class="col-form-label col-lg-2 pl-1  pr-fontalternativa" for="produtoFor">Descrição ou NCM:</label>

                                    <div class="col-lg-8">
                                        @Html.TextBox("procurarPor", null, new { @class = "pr-fontalternativa   form-control form-control-sm", onkeyup = "maiuscula(this);", placeholder = "Digite o nome do produto ou seu NCM", style = "width:100%;", id = "btnClick" })
                                    </div>
                                    <div class="col-lg-2 pl-1">
                                        <button type="submit" class="btn btn-secondary pr-botoes-fundo border-0">
                                            <i style="font-size:1.3em;" class="fas fa-search"></i>
                                        </button>
                                    </div>

                                </div>
                                <div class="form-group row">

                                    <label class="col-form-label col-lg-2 pl-1  pr-fontalternativa" for="linhas">Linhas:</label>
                                    <div class="col-lg-1">
                                        <select class="pr-fontalternativa form-control form-control-sm" id="numeroLinhas" name="numeroLinhas">
                                            @if (ViewBag.NumeroLinhas == 10)
                                            {


                                                <option selected>10</option>
                                                <option>20</option>
                                                <option>30</option>
                                            }
                                            else
                                            {
                                                if (ViewBag.NumeroLinhas == 20)
                                                {

                                                    <option>10</option>
                                                    <option selected>20</option>
                                                    <option>30</option>
                                                }
                                                else
                                                {
                                                    <option>10</option>
                                                    <option>20</option>
                                                    <option selected>30</option>
                                                }
                                            }

                                        </select>
                                    </div>
                                    <div class="class-col-lg-2 pl-1">
                                        <button type="submit" class="btn btn-secondary pr-botoes-fundo border-0">
                                            <i style="font-size:1.3em;" class="fas fa-check-circle"></i>
                                        </button>
                                    </div>



                                </div>




                            }
                            <!--Tabela-->
                            <table style="border-bottom: 1px solid #111;" class="table table-striped table-hover" id="table-graficos2">
                                <thead style="font-size:12px; color:#ffffff; font-weight:100 !important" class="pr-thead">
                                    <tr>
                                        <th scope="col">
                                            Id
                                        </th>
                                        <th scope="col">
                                            Código de Barras
                                        </th>
                                        <th scope="col" class="pr-actionlink">
                                            <i style="font-size:1.1em;" class="fas fa-sort pr-actionlink"></i>
                                            @Html.ActionLink("Produto", "EditMassa", new { filtroCorrente = ViewBag.FiltroCorrente, numeroLinhas = ViewBag.NumeroLinhas, ordenacao = ViewBag.ParametroProduto, opcao = TempData["opcao"].ToString() })

                                        </th>

                                        <th scope="col">Cest</th>
                                        <th scope="col">NCM</th>
                                        <th scope="col" class="text-center">Última alteração</th>

                                    </tr>
                                </thead>
                                <!--Corpo da Tabela-->
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr class="pr-td">
                                        <td style="width:5%">
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>
                                        <td style="width:10%">
                                            @Html.DisplayFor(modelItem => item.codBarras)
                                        </td>
                                        <td style="width:20%">
                                            @Html.DisplayFor(modelItem => item.descricao)
                                        </td>

                                        <td style="width:15%;">
                                            @item.cest
                                        </td>
                                        <td style="width:15%;">
                                            @item.ncm
                                        </td>
                                        <td style="width:10%;" class="text-center">
                                            @item.Data
                                        </td>


                                    </tr>
                                    }
                                </tbody>

                            </table>
                            <!--Rodape-->
                            <div class="d-flex">
                                <div class="mr-auto p-2">
                                    <p class="pr-fontanternativa">
                                        <span class="pr-fontalternativa"> Página @(Model.PageCount<Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount</span>
                                    </p>
                                </div>

                                <div style="float:right;" class="p-2 pr-fontalternativa">
                                    @Html.PagedListPager(
                                    Model, page => Url.Action("EditMassa", new { page, ordenacao = ViewBag.Ordenacao, numeroLinhas = ViewBag.NumeroLinhas, filtroCorrente = ViewBag.FiltroCorrente, opcao = TempData["opcao"].ToString() }),
                                    new PagedListRenderOptions()
                                    {
                                        LiElementClasses = new List<string>
                                        {
                                            "page-item"
                                        }
                                    }

                                    )


                                </div>
                            </div>




                        </div><!--Fim do container da coluna-->
                    </div><!--fim da coluna de 10-->
                </div><!--fim da linha-->




            </div><!--Fim do container do body do card-->
        </div><!--fim do body do card-->
    </div><!--Fim do card-->
</div><!--Fim do container-->



