                            </div>


                        </div>
                    </div>*@

                </div>
                <div class="row">

                    <div class="col-lg-12">
                        <div class="container-fluid">

                            <div class="overflow-auto" style="max-width: 100%; max-height: 500px;">

                                <table id="table-editmassa" class="table table-sm table-striped">
                                    <caption>Produtos que receberão a nova aliquota : <label id="lab" /> </caption>
                                    <thead style="font-size:12px; color:#ffffff; font-weight:100 !important" class="pr-thead">
                                        <tr>
                                            <th class="align-middle">Id</th>
                                            <th class="align-middle">Código de Barras</th>
                                            <th class="align-middle">Descrição do Produto</th>
                                            <th class="align-middle text-center">Alíquota</th>

                                            <th class="text-center align-middle">Última alteração</th>


                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr class="pr-td sel">
                                                <td style="width:3%">
                                                    @Html.DisplayFor(modelItem => item.id)
                                                </td>
                                                <td style="width:5%">
                                                    @Html.DisplayFor(modelItem => item.produtos.codBarras)
                                                </td>
                                                <td style="width:20%">
                                                    @Html.DisplayFor(modelItem => item.produtos.descricao)
                                                </td>
                                                <td class="text-center" style="width:5%">
                                                    @Html.DisplayFor(modelItem => item.aliqIcmsVendaVarejoCont)
                                                </td>

                                                <td style="width:5%;" class="text-center">
                                                    @Html.DisplayFor(modelItem => item.Data)

                                                </td>

                                            </tr>
                                        }

                                    </tbody>
                                </table>


                            </div>


                        </div><!--Fim do container da coluna-->
                    </div><!--Fim da primeira coluna 12-->

                </div><!--fim da linha-->

            </div><!--fim do container do body do card-->

        </div><!--Fim do corpo do card-->

    </div><!--fim do card-->


</div><!--fim do container-->
