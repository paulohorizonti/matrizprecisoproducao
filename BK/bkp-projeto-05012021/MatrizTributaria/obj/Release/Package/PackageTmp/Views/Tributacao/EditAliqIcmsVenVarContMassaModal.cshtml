@model IEnumerable<MatrizTributaria.Models.Tributacao>
@{
    ViewBag.Title = "EditAliqIcmsVenVarContMassaModal";
}

<div class="container-fluid pr-container pr-card-cad">
    <div class="card mt-2">
        <div class="card-header">
            Alterar Aliquota Icms Venda Varejo para Contribuinte
            <a href='javascript:history.go(-1)' data-toggle="tooltip" data-placement="right" title="Voltar à tabela" type="button" id="voltar" class="float-lg-right dis-block btn btn-secondary pr-botoes-fundo border-0"><i style="font-size:1.5em;" class="fas fa-undo"></i></a>

        </div><!--fim do cabeçalho-->

        <div class="card-body">
            <div class="container-fluid">
                <div class="row">
                    <div class="form-group col-lg-2 p-2">
                        <label class="pr-fontalternativa">Digite a nova alíquota</label>
                        <div class="input-group input-group-sm">
                            <!--input-->

                            <input type="text" class="form-control form-control-sm pr-aliq" name="aliqIcmsVenVarCont" id="aliqIcmsVenVarCont"/>

                            <div class="input-group-append">
                                <!--botao-->
                                <button id="salvarAliqIcmsVenVarCont" type="submit" class="btn btn-secondary pr-botoes-fundo" data-toggle="tooltip" data-placement="right" title="Salvar Alíquota em Massa">
                                    <i style="font-size:1.3em;" class="fas fa-save"></i>
                                </button>
                            </div>
                        </div>
                    </div>



                    @*<div class="col-12">
                        <div class="container-fluid ml-1 mt-1">
                            <div class="form-group row">

                                <label class="col-form-label col-lg-3 pl-1  pr-fontalternativa" for="linhas">Digite a nova alíquota para os produtos abaixo:</label>

                                <div class="col-lg-3">
                                    <input type="text" class="form-control form-control-sm mt-1 pr-aliq" name="aliqIcmsVenVarCont" id="aliqIcmsVenVarCont" style="min-width:100%;" />

