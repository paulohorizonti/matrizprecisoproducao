
@model IEnumerable<MatrizTributaria.Models.Tributacao>
@{
    ViewBag.Title = "EditCstPisCofinsSaidaMassaModal";
}


<div class="container-fluid pr-container pr-card-cad">
    <div class="card mt-2">
        <div class="card-header">
            Alterar Cst Pis/Cofins de Saída
            <a href='javascript:history.go(-1)' data-toggle="tooltip" data-placement="right" title="Voltar à tabela" type="button" id="voltar" class="float-lg-right dis-block btn btn-secondary pr-botoes-fundo border-0"><i style="font-size:1.5em;" class="fas fa-undo"></i></a>

        </div><!--fim do cabeçalho-->

        <div class="card-body">
            <div class="container-fluid">
                <div class="row">
                    
                         
                                <div class="form-group col-lg-2 p-2">
                                    <label class="pr-fontalternativa">Escolha CST</label>
                                    <div class="input-group input-group-sm">
                                        <!--input-->
                                        @Html.DropDownList("cstPCSaida", new SelectList(ViewBag.CstSaidaPisCofins, "descricao", "codigo"), "CST", new { @class = "form-control form-control-sm dropdown" })

                                        <div class="input-group-append">
                                            <!--botao-->
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-lg-8 p-2">
                                    <label class="pr-fontalternativa">Descrição CST</label>
                                    <div class="input-group input-group-sm">
                                        <!--input-->
                                        <input type="text" class="form-control form-control-sm" name="cstSaidaPisCofins" id="cstPCS"  readonly />

                                        <div class="input-group-append">
                                            <!--botao-->
                                            <button id="salvarCstPCSaida" type="submit" class="btn btn-secondary pr-botoes-fundo" data-toggle="tooltip" data-placement="right" title="Salvar CST em Massa">
                                                <i style="font-size:1.3em;" class="fas fa-save"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>

                           



                      
                   

                </div>
                <div class="row">

                    <div class="col-lg-12">
                        <div class="container-fluid">

                            <div class="overflow-auto" style="max-width: 100%; max-height: 500px;">

                                <table id="table-editmassa" class="table table-sm table-striped">
                                    <caption>Produtos que receberão o novo CST : <label id="lab" /> </caption>
                                    <thead style="font-size:12px; color:#ffffff; font-weight:100 !important" class="pr-thead">
                                        <tr>

                                            <th class="align-middle" scope="col">ID</th>
                                            <th class="align-middle" scope="col">Código de Barras</th>
                                            <th class="align-middle" scope="col">Descrição</th>
                                            <th class="align-middle" scope="col">CST Pis/Cofins Saída</th>
                                            <th class="align-middle" scope="col"> Descrição CST</th>
                                            <th class="text-center align-middle" scope="col">Última alteração</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr class="pr-td sel">
                                                <td style="width:5%">
                                                    @Html.DisplayFor(modelItem => item.id)

                                                </td>
                                                <td style="width:10%">
                                                    @Html.DisplayFor(modelItem => item.produtos.codBarras)

                                                </td>
                                                <td style="width:20%;">
                                                    @Html.DisplayFor(modelItem => item.produtos.descricao)
                                                </td>
                                                <td style="width:15%;">
                                                    @Html.DisplayFor(modelItem => item.cstSaidaPisCofins)
                                                </td>
                                                <td style="width:15%;">
                                                    @Html.DisplayFor(modelItem => item.cstPisCofinsS.descricao)
                                                </td>
                                                <td style="width:10%;" class="text-center">
                                                    @Html.DisplayFor(modelItem => item.Data)
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>


                            </div>


                        </div><!--Fim do container da coluna-->
                    </div><!--Fim da primeira coluna 12-->

                </div><!--fim da linha-->

            </div><!--fim do container do body do card-->

        </div><!--Fim do corpo do card-->

    </div><!--fim do card-->


</div><!--fim do container-->
