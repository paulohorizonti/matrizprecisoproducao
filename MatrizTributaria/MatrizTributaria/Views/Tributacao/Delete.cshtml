@model MatrizTributaria.Models.Tributacao
@{
    ViewBag.Title = "Tributacao";
}

<div class="container-fluid pr-container pr-card-cad">
    <div class="card mt-2">
        <div class="card-header">
            Cadastro Tributação - DELETE
        </div><!--fim do cabeçalho-->
        <div class="card-body">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="container-fluid">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group row">
                                    <div class="col-md-offset-2 col-md-12">

                                        <div style="background-color: ButtonFace; border-radius:0.4em; width:100%;" class="mb-2">
                                            <div id="pr-botoes" class="btn-group border-0" role="group" aria-label="Grupo de botões com dropdown aninhado">
                                                <button type="submit" class="btn btn-secondary pr-botoes-fundo border-0"><i style="font-size:1.5em;" class="fas fa-save"></i>Excluir</button>
                                                <a class="btn btn-secondary pr-botoes-fundo border-0 " href="@Url.Action("Index", @ViewBag.Title)"><i style="font-size:1.5em;" class="fas fa-ban"></i>Cancelar</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="alert alert-warning" role="alert">
                                    Deseja realmente excluir esse Registro?
                                </div>

                                <div class="form-group row ">
                                    <div class="scrolling-wrapper col-lg-12">

                                        <div class="col-lg-6" height:inherit;">
                                            <!--coluna 1-->
                                            <div class="col-lg-12">

                                                <div class="form-group row col-lg-12 pl-3 ">
                                                    <label class="col-form-label col-lg-3 pl-1 pr-fontalternativa" for="id">Id Tributação:</label>

                                                    <div class="col-lg-2">
                                                        @Html.TextBoxFor(m => m.id, new { @class = "form-control pr-fonte", @disabled = "disabled" })
                                                    </div>
                                                </div>
                                                <div class="form-group row col-lg-12 pl-3">
                                                    <label class="col-form-label col-lg-3 pl-1 pr-fontalternativa" for="descricao">Produto:</label>

                                                    <div class="col-lg-8">
                                                        @Html.TextBoxFor(m => m.produtos.descricao, new { @class = "form-control pr-fonte", @disabled = "disabled" })
                                                    </div>

                                                </div>



                                                <div class="form-group row col-lg-12 pl-3">
                                                    <label class="col-form-label col-lg-3 pl-1 pr-fontalternativa" for="descricao">Código de Barras:</label>

                                                    <div class="col-lg-4">
                                                        @Html.TextBoxFor(m => m.produtos.codBarras, new { @class = "form-control pr-fonte", @disabled = "disabled" })
                                                    </div>

                                                </div>

                                                <div class="form-group row col-lg-12 pl-3">
                                                    <label class="col-form-label col-lg-3 pl-1 pr-fontalternativa" for="descricao">CEST:</label>

                                                    <div class="col-lg-4">
                                                        @Html.TextBoxFor(m => m.produtos.cest, new { @class = "form-control pr-fonte", @disabled = "disabled" })
                                                    </div>

                                                </div>

                                                <div class="form-group row col-lg-12 pl-3">
                                                    <label class="col-form-label col-lg-3 pl-1 pr-fontalternativa" for="descricao">NCM:</label>

                                                    <div class="col-lg-4">
                                                        @Html.TextBoxFor(m => m.produtos.ncm, new { @class = "form-control pr-fonte", @disabled = "disabled" })
                                                    </div>

                                                </div>
                                                <div class="form-group row col-lg-12 pl-3">
                                                    <label class="col-form-label col-lg-3 pl-1 pr-fontalternativa">FECP:</label>

                                                    <div class="col-lg-3">
                                                        @Html.TextBoxFor(m => m.fecp, new { @class = "form-control pr-fonte", @disabled = "disabled" })
                                                    </div>

                                                </div>
                                            </div>


                                        </div> <!--Primeira box-->

                                        <div class="col-lg-6">
                                            <div class="col-lg-12">
                                                <div class="form-group row col-lg-12 pl-3 ">
                                                    <label class="col-form-label col-lg-3 pl-1 pr-fontalternativa">Natureza Receita:</label>

                                                    <div class="col-lg-9">
                                                        @Html.TextBoxFor(m => m.naturezaReceita.descricao, new { @class = "form-control pr-fonte", @disabled = "disabled" })
                                                    </div>
                                                </div>
                                                <div class="form-group row col-lg-12 pl-3">
                                                    <label class="col-form-label col-lg-3 pl-1 pr-fontalternativa">CST P/C E:</label>

                                                    <div class="col-lg-9">
                                                        @Html.TextBoxFor(m => m.cstPisCofinsE.descricao, new { @class = "form-control pr-fonte", @disabled = "disabled" })
                                                    </div>

                                                </div>
                                                <div class="form-group row col-lg-12 pl-3">

                                                    <div class="col-lg-6">
                                                        <div class="form-group row col-lg-12 pl-3">
                                                            <label class="col-form-label col-lg-4 pl-1 pr-fontalternativa">Aliq Pis E:</label>

                                                            <div class="col-lg-8">
                                                                @Html.TextBoxFor(m => m.aliqEntPis, new { @class = "form-control pr-fonte", @disabled = "disabled" })
                                                            </div>
                                                        </div>
                                                        <div class="form-group row col-lg-12 pl-3">
                                                            <label class="col-form-label col-lg-4 pl-1 pr-fontalternativa">Aliq Pis S:</label>

                                                            <div class="col-lg-8">
                                                                @Html.TextBoxFor(m => m.aliqSaidaPis, new { @class = "form-control pr-fonte", @disabled = "disabled" })
                                                            </div>

                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <div class="form-group row col-lg-12 pl-3">
                                                            <label class="col-form-label col-lg-4 pl-1 pr-fontalternativa">Aliq Cofins E:</label>

                                                            <div class="col-lg-8">
                                                                @Html.TextBoxFor(m => m.aliqEntCofins, new { @class = "form-control pr-fonte", @disabled = "disabled" })
                                                            </div>
                                                        </div>
                                                        <div class="form-group row col-lg-12 pl-3">
                                                            <label class="col-form-label col-lg-4 pl-1 pr-fontalternativa">Aliq Cofins s:</label>

                                                            <div class="col-lg-8">
                                                                @Html.TextBoxFor(m => m.aliqSaidaCofins, new { @class = "form-control pr-fonte", @disabled = "disabled" })
                                                            </div>

                                                        </div>

                                                    </div>



                                                </div>
                                                <div class="form-group row col-lg-12 pl-3">
                                                    <label class="col-form-label col-lg-3 pl-1 pr-fontalternativa">CST P/C S:</label>

                                                    <div class="col-lg-9">
                                                        @Html.TextBoxFor(m => m.cstPisCofinsS.descricao, new { @class = "form-control pr-fonte", @disabled = "disabled" })
                                                    </div>

                                                </div>


                                            </div>
                                        </div>


                                    </div><!--Fim da wraper-->

                                </div> <!--Fim div row-->
                            }


                        </div><!--fim do container da tabela-->
                    </div><!--Fim da coluna de 10-->
                </div><!--fim da linha-->
            </div><!--Fim do container do body do card-->
        </div><!--fim do body do card-->
    </div><!--Fim do card-->
</div><!--Fim do container-->
