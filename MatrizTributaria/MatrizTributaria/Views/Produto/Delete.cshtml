@model MatrizTributaria.Models.Produto
@{
    ViewBag.Title = "Produto";
}

<div class="container-fluid pr-container pr-card-cad">
    <div class="card mt-2">
        <div class="card-header">
            Cadastro Produtos - DELETE
        </div><!--fim do cabeçalho-->
        <div class="card-body">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="container-fluid">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group row">
                                    <div class="col-md-offset-2 col-md-12">

                                        <div style="background-color: ButtonFace; border-radius:0.4em; width:100%;" class="mb-2">
                                            <div id="pr-botoes" class="btn-group border-0" role="group" aria-label="Grupo de botões com dropdown aninhado">
                                                <button type="submit" class="btn btn-secondary pr-botoes-fundo border-0"><i style="font-size:1.5em;" class="fas fa-save"></i>Excluir</button>
                                                <a class="btn btn-secondary pr-botoes-fundo border-0 " href="@Url.Action("Index", @ViewBag.Title)"><i style="font-size:1.5em;" class="fas fa-ban"></i>Cancelar</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="alert alert-warning" role="alert">
                                    Deseja realmente excluir esse Registro?
                                </div>

                                <div class="form-group row ">
                                    <!--coluna 1-->
                                    <div class="col-lg-6">

                                        <div class="form-group row col-lg-12 pl-3 ">
                                            <label class="col-form-label col-lg-3 pl-1 pr-fontalternativa" for="id">Id:</label>

                                            <div class="col-lg-2">
                                                @Html.TextBoxFor(m => m.Id, new { @class = "form-control pr-fonte", @disabled = "disabled" })
                                            </div>
                                        </div>
                                        <div class="form-group row col-lg-12 pl-3">
                                            <label class="col-form-label col-lg-3 pl-1 pr-fontalternativa" for="descricao">Descrição:</label>

                                            <div class="col-lg-8">
                                                @Html.TextBoxFor(m => m.descricao, new { @class = "form-control pr-fonte", @disabled = "disabled" })
                                            </div>

                                        </div>



                                        <div class="form-group row col-lg-12 pl-3">
                                            <label class="col-form-label col-lg-3 pl-1 pr-fontalternativa" for="descricao">Código de Barras:</label>

                                            <div class="col-lg-4">
                                                @Html.TextBoxFor(m => m.codBarras, new { @class = "form-control pr-fonte", @disabled = "disabled" })
                                            </div>

                                        </div>

                                        <div class="form-group row col-lg-12 pl-3">
                                            <label class="col-form-label col-lg-3 pl-1 pr-fontalternativa" for="descricao">CEST:</label>

                                            <div class="col-lg-4">
                                                @Html.TextBoxFor(m => m.cest, new { @class = "form-control pr-fonte", @disabled = "disabled" })
                                            </div>

                                        </div>

                                        <div class="form-group row col-lg-12 pl-3">
                                            <label class="col-form-label col-lg-3 pl-1 pr-fontalternativa" for="descricao">NCM:</label>

                                            <div class="col-lg-4">
                                                @Html.TextBoxFor(m => m.ncm, new { @class = "form-control pr-fonte", @disabled = "disabled" })
                                            </div>

                                        </div>
                                    </div>



                                    <!--coluna 2-->
                                    <div class="col-lg-6">


                                        <div class="form-group row col-lg-12 pl-3">
                                            <label class="col-form-label col-lg-3 pl-1 pr-fontalternativa" for="descricao">Código Interno:</label>

                                            <div class="col-lg-4">
                                                @Html.TextBoxFor(m => m.codInterno, new { @class = "form-control pr-fonte", @disabled = "disabled" })
                                            </div>

                                        </div>
                                        <div class="form-group row col-lg-12 pl-3">
                                            <label class="col-form-label col-lg-3 pl-1 pr-fontalternativa" for="descricao">Categoria:</label>

                                            <div class="col-lg-9">
                                                @Html.TextBoxFor(m => m.categoriaProduto.descricao, new { @class = "form-control pr-fonte", @disabled = "disabled" })
                                            </div>

                                        </div>

                                        <div class="form-group row col-lg-12 pl-3">

                                            <label class="col-form-label col-lg-3 pl-3 pr-fontalternativa" for="ativo">Ativo</label>

                                            <div class="col-lg-3">
                                                <span class="pr-fonte">Sim: @Html.RadioButtonFor(m => m.status, 1, new { @disabled = "disabled" })</span>
                                                <span class="pr-fonte">Não: @Html.RadioButtonFor(m => m.status, 0, new { @disabled = "disabled" })</span>
                                            </div>


                                        </div>

                                        <div class="form-group row col-lg-12 pl-3">
                                            <label class="col-form-label col-lg-3 pl-1 pr-fontalternativa" for="dataCad">Data Cad:</label>

                                            <div class="col-lg-2">

                                                <input class="form-control pr-fonte" disabled="disabled" id="dataAlt" name="dataAlt" type="text" value="@Convert.ToDateTime(@ViewBag.DataCad).ToShortDateString()" />

                                            </div>

                                        </div>
                                        <div class="form-group row col-lg-12 pl-3">
                                            <label class="col-form-label col-lg-3 pl-1 pr-fontalternativa" for="dataAlt">Data Alt:</label>

                                            <div class="col-lg-2">
                                                
                                                <input class="form-control pr-fonte" disabled="disabled" id="dataAlt" name="dataAlt" type="text" value="@Convert.ToDateTime(@ViewBag.DataAlt).ToShortDateString()" />

                                             </div>

                                        </div>


                                        </div>


                                    </div> <!--Fim div-->
                                }


                                </div><!--fim do container da tabela-->
                    </div><!--Fim da coluna de 10-->
                </div><!--fim da linha-->
            </div><!--Fim do container do body do card-->
        </div><!--fim do body do card-->
    </div><!--Fim do card-->
</div><!--Fim do container-->
