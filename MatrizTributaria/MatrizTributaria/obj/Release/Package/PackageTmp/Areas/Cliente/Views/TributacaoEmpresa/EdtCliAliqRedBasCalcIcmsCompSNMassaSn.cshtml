
@using PagedList.Mvc
@using MatrizTributaria.Areas.Cliente.Models
@model PagedList.IPagedList<MatrizTributaria.Areas.Cliente.Models.AnaliseTributariaSn>
@{ ViewBag.Title = "EdtCliAliqRedBasCalcIcmsCompSNMassaSn"; }


@RenderPage("~/Areas/Cliente/Views/Acoes/CardInicial.cshtml") <!--Renderiza o card inicial-->

<div id="card-analise" class="container-fluid pr-container-2 pr-card-cad">
    <div class="card">
        <div class="card-header">
            ANALISE:Produto <strong>"@ViewBag.Mensagem"</strong> Origem: "@ViewBag.UfOrigem" - Destino: "@ViewBag.UfDestino" <a data-toggle="tooltip" data-placement="right" title="Ir para Gráficos" class="float-lg-right dis-block btn btn-secondary pr-botoes-fundo border-0" href="@Url.Action("AnaliseRedBaseCalEntSn","TributacaoEmpresa")"><i style="font-size:1.3em;" class="fas fa-chart-pie"></i>  </a>
            <button data-toggle="tooltip" data-placement="right" title="Alterar Selecionado(s)" type="button" id="edtSelRedBasCalcIcmsCompSNCliente" class="float-lg-right dis-block btn btn-secondary pr-botoes-fundo border-0"> <i style="font-size:1.3em;" class="fas fa-edit"></i></button>
            <button data-toggle="tooltip" data-placement="right" title="Alterar Selecionado(s) Manualmente" type="button" id="edtSelRedBasCalcIcmsCompSNClienteManual" class="float-lg-right dis-block btn btn-secondary pr-botoes-fundo border-0"><i style="font-size:1.3em;" class="fas fa-user-edit"></i></button>

        </div><!--fim do cabeçalho-->

        <div class="card-body">
            <div class="container-fluid">
                <div class="row">

                    <div class="col-lg-12">

                        <!--Caixa Geral-->
                        <div class="scrolling-wrapper">
                            <div style="min-width:99.5%; height:inherit;" class="box">
                                <table id="tbl-redBasCalcIcmsCompSN" class="table table table-light table-hover thead-dark table-striped pr-table">
                                    <thead class="pr-thead">
                                        <tr>
                                            <th style="text-align:center; border:none;" colspan="6" class="pr-fonte2" scope="col">Analise Alíquota</th>

                                        </tr>
                                        <tr class="pr-td">
                                            <th>
                                                Registro
                                            </th>
                                            <th>
                                                Código de Barras
                                            </th>
                                            <th>
                                                Descrição
                                            </th>
                                            <th>
                                                Cest
                                            </th>
                                            <th>
                                                Alíquota no Cliente
                                            </th>
                                            <th>
                                                Alíquota no MTX
                                            </th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                            <tr style="height:12.0px;" class="pr-td">
                                <td style="width:4%;">
                                    @Html.DisplayFor(modelItem => item.TE_ID)
                                </td>
                                <td style="width:8%;">
                                    @Html.DisplayFor(modelItem => item.PRODUTO_COD_BARRAS)
                                </td>
                                <td style="width:40%;">
                                    @Html.DisplayFor(modelItem => item.PRODUTO_DESCRICAO)
                                </td>
                                <td style="width:10%;">
                                    @Html.DisplayFor(modelItem => item.PRODUTO_CEST)
                                </td>

                                @if (item.RED_BASE_CALC_ICMS_COMPRA_SIMP_NACIONAL == null)
                                {
                <td style="text-align:center; width:10%;">
                    @Html.DisplayFor(modelItem => item.RED_BASE_CALC_ICMS_COMPRA_SIMP_NACIONAL)
                </td> }
                                else
                                {
                                    if (item.RED_BASE_CALC_ICMS_COMPRA_SIMP_NACIONAL > item.Red_Base_Calc_Icms_Compra_de_Simp_Nacional_INTERNO)
                                    {

                <td style="text-align:center; width:10%;" class="pr-td-maior">
                    @Html.DisplayFor(modelItem => item.RED_BASE_CALC_ICMS_COMPRA_SIMP_NACIONAL)
                </td> }
                                    else
                                    {
                                        if (item.RED_BASE_CALC_ICMS_COMPRA_SIMP_NACIONAL < item.Red_Base_Calc_Icms_Compra_de_Simp_Nacional_INTERNO)
                                        {
                <td style="text-align:center; width:10%;" class="pr-td-menor">
                    @Html.DisplayFor(modelItem => item.RED_BASE_CALC_ICMS_COMPRA_SIMP_NACIONAL)
                </td> }
                                        else
                                        {

                                            if (item.RED_BASE_CALC_ICMS_COMPRA_SIMP_NACIONAL == item.Red_Base_Calc_Icms_Compra_de_Simp_Nacional_INTERNO)
                                            {
                <td style="text-align:center; width:10%;" class="pr-td-igual">
                    @Html.DisplayFor(modelItem => item.RED_BASE_CALC_ICMS_COMPRA_SIMP_NACIONAL)
                </td> }
                                            else
                                            {
                                                if (item.RED_BASE_CALC_ICMS_COMPRA_SIMP_NACIONAL != null && item.Red_Base_Calc_Icms_Compra_de_Simp_Nacional_INTERNO == null)
                                                {
                <td style="text-align:center; width:10%;">
                    @Html.DisplayFor(modelItem => item.RED_BASE_CALC_ICMS_COMPRA_SIMP_NACIONAL)
                </td>}


                                            }


                                        }

                                    }
                                }

                                <td style="text-align:center; width:10%;">
                                    @Html.DisplayFor(modelItem => item.Red_Base_Calc_Icms_Compra_de_Simp_Nacional_INTERNO)
                            </tr>}

                                    </tbody>
                                </table><!--fim da tabela-->
                            </div> <!--Fim primeira Caixa-->
                        </div>
                    </div>

                </div><!--fim da linha-->
                <div class="d-flex" style="height:8vh; vertical-align: middle;">
                    <div class="mr-auto p-2">

                        <p class="pr-fontanternativa">

                            <span class="pr-fontalternativa">Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount  - Total de registros: @Model.TotalItemCount</span>
                        </p>

                    </div>

                    <div style="float:right;" class="p-2 pr-fontalternativa">
                        @Html.PagedListPager(
                            Model,
                            page => Url.Action("EdtCliAliqRedBasCalcIcmsCompSNMassaSn",
                            new
                            {
                                page,
                                ordenacao = ViewBag.Ordenacao,
                                filtroCorrente = ViewBag.FiltroCorrente,
                                filtroCorrenteNCM = ViewBag.FiltroCorrenteNCM,
                                filtroCorrenteCest = ViewBag.FiltroCorrenteCest,
                                numeroLinhas = ViewBag.NumeroLinhas,
                                filtroNulo = ViewBag.Filtro,
                                opcao = TempData["opcao"].ToString()

                            }),
                            new PagedListRenderOptions()
                            {
                                LiElementClasses = new List<string> { "page-item" }
                            })
                    </div>

                </div>
            </div><!--fim do container do body do card-->

        </div><!--Fim do corpo do card-->
        <div class="card-footer">
            Linha(s) selecionada(s) + :&nbsp; <i style="font-size:1.5em;" class="fas fa-edit"></i> = Edição em massa igualando ao MTX; <br />
            Linha(s) selecionada(s) + :&nbsp; <i style="font-size:1.5em;" class="fas fa-user-edit"></i> = Edição em massa informando Alíquota manualmente <br />
        </div>

    </div><!--fim do card-->


</div><!--fim do container-->
