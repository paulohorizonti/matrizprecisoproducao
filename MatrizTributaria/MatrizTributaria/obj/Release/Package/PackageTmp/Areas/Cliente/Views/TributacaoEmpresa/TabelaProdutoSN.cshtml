@using PagedList.Mvc
@using MatrizTributaria.Areas.Cliente.Models
@model PagedList.IPagedList<MatrizTributaria.Areas.Cliente.Models.AnaliseTributaria3>


@{ ViewBag.Title = "TabelaProduto"; }


<div class="container-fluid pr-container pr-card-cad">
    <div class="card mt-2">
        <div class="card-header">
            BUSCA
            @RenderPage("~/Areas/Cliente/Views/Acoes/BotaoHome.cshtml") <!--Renderiza o botao home-->
        </div><!--fim do cabeçalho-->

        <div class="card-body">
            <div class="container-fluid">
                <div class="row">

                    <div class="col-lg-12">
                        <div class="container-fluid">

                            @using (Html.BeginForm("TabelaProdutoSN", "TributacaoEmpresa", FormMethod.Get, new { @class = "form-row" }))
                            {



                <div class="form-group col-lg-7">
                    <label class="pr-fontealternativa">Filtro</label>
                    <div class="input-group input-group-sm">
                        <select class="form-control form-control-sm" id="parFiltro" name="parFiltro" style="width:45px;">

                            @if (ViewBag.ParFiltro == 3)
                            {


            <option selected value="3">Por Cód. de Barras ou Descrição</option>


                                <option value="2">Por NCM</option>


                                                    <option value="1">Por CEST</option>
 }
                                                else
                                                {
                                                    if (ViewBag.ParFiltro == 2)
                                                    {

                                <option value=3>Por Cód. de Barras ou Descrição </option>


                                                        <option selected value="2">Por NCM</option>


                                                                                <option value="1">Por CEST</option>
 }
                                                                            else
                                                                            {
                                                        <option value=3>Por Cód. de Barras ou Descrição </option>


                                                                                <option value="2">Por NCM</option>


                                                                                                        <option selected value="1">Por CEST</option>
}
                                                                                                }


                        </select>
                        <div class="input-group-append">
                            @*<input id="filtro" name="filtro" type="text" class="form-control form-control-sm" style="width:550px;"/>*@
                            @Html.TextBox("FiltroDados", (string)ViewBag.DadoFiltrar, new { @class = "form-control form-control-sm", onkeyup = "maiuscula(this);", placeholder = "Digite descrição ou o código de Barras", style = "width:32rem;" })

                        </div>
                        <div class="input-group-append">
                            <button data-toggle="tooltip" data-placement="right" title="Localizar" class="btn btn-secondary pr-botoes-fundo"
                                    type="submit" id="button-addon3">
                                <i style="font-size:1.3em;" class="fas fa-check-circle"></i>
                            </button>
                        </div>
                    </div>

                </div>



                                <div class="form-group col-lg-3">
                                    <label class="pr-fontealternativa">Selecionar</label>
                                    <div class="input-group input-group-sm">
                                        <select class="form-control form-control-sm" id="filtroSelect" name="filtroSelect">

                                            @if (ViewBag.FiltroSelect == 1)
                                            {


                            <option value="1" selected>Com Correspondência</option>


                                                <option value="2">Sem Correspondência</option>
 }
                                            else
                                            {
                                                if (ViewBag.FiltroSelect == 2)
                                                {

                            <option value="1">Com Correspondência</option>


                                                    <option value="2" selected>Sem Correspondência</option>
}

                                            }


                                        </select>

                                        <div class="input-group-append">
                                            <button data-toggle="tooltip" data-placement="right" title="Localizar" class="btn btn-secondary pr-botoes-fundo"
                                                    type="submit" id="button-addon4">
                                                <i style="font-size:1.3em;" class="fas fa-check-circle"></i>
                                            </button>
                                        </div>
                                    </div>

                                </div>

                                                <div class="form-group col-lg-2">
                                                    <label class="pr-fontealternativa">Linhas</label>
                                                    <div class="input-group input-group-sm">
                                                        <select class="form-control form-control-sm" id="numeroLinhas" name="numeroLinhas">

                                                            @if (ViewBag.NumeroLinhas == 5)
                                                            {


                                            <option selected>5</option>


                                                                <option>15</option>


                                                                                    <option>25</option>
 }
                                                                                else
                                                                                {
                                                                                    if (ViewBag.NumeroLinhas == 15)
                                                                                    {

                                                                <option>5</option>


                                                                                        <option selected>15</option>


                                                                                                                <option>25</option>
 }
                                                                                                            else
                                                                                                            {
                                                                                        <option>5</option>
                                                                                                                <option>15</option>
                                                                                                                                        <option selected>25</option>
}
                                                                                                                                }


                                                        </select>

                                                        <div class="input-group-append">
                                                            <button data-toggle="tooltip" data-placement="right" title="Localizar" class="btn btn-secondary pr-botoes-fundo"
                                                                    type="submit" id="button-addon3">
                                                                <i style="font-size:1.3em;" class="fas fa-check-circle"></i>
                                                            </button>
                                                        </div>
                                                    </div>

                                                </div>}




                        </div><!--Fim do container da coluna-->
                    </div><!--Fim da primeira coluna 12-->

                </div><!--fim da linha-->

            </div><!--fim do container do body do card-->

        </div><!--Fim do corpo do card-->

    </div><!--fim do card-->


</div><!--fim do container-->


<div id="card-analise" class="container-fluid pr-container-2 pr-card-cad">
    <div class="card">
        <div class="card-header">
            ANALISE:Produto<a class="float-lg-right dis-block btn btn-secondary pr-botoes-fundo border-0" href="@Url.Action("AnaliseProd", "TributacaoEmpresa")"><i style="font-size:1.3em;" class="fas fa-chart-pie"></i>  </a>
        </div><!--fim do cabeçalho-->

        <div class="card-body">
            <div class="container-fluid">
                <div class="row">

                    <div class="col-lg-2">

                        <!--Caixa Geral-->
                        <div class="scrolling-wrapper">
                            <div style="min-width:98.5%; height:inherit;" class="box">
                                <table id="tablepr-2" class="table table table-light table-hover thead-dark table-striped pr-table">
                                    <thead class="pr-thead">
                                        <tr>
                                            <th style="text-align:center; border:none;" colspan="1" class="pr-fonte2" scope="col">Identificação</th>

                                        </tr>
                                        <tr class="pr-td">
                                            <th>
                                                Código de Barras
                                            </th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                            <tr style="height:78.0px; border-bottom:2px solid #ccc;" class="pr-td">

                                <td style="width:5%;">
                                    @Html.DisplayFor(modelItem => item.PRODUTO_COD_BARRAS)
                                </td>
                            </tr>}

                                    </tbody>
                                </table><!--fim da tabela-->
                            </div> <!--Fim primeira Caixa-->
                        </div>
                    </div>
                    <div class="col-lg-10">
                        <div class="scrolling-wrapper">
                            <!--Segunda caixa-->
                            <div style="min-width:99.4%; height:inherit;" class="box">

                                <table id="tablepr-2" class="table table table-light table-hover thead-dark table-striped pr-table">
                                    <thead class="pr-thead">
                                        <tr>
                                            <th style="text-align:center; border:none;" colspan="3" class="pr-fonte2 pr-thtd" scope="col">Produto</th>

                                        </tr>
                                        <tr class="pr-td">
                                            <th class="text-center">
                                                Item
                                            </th>
                                            <th class="text-center">
                                                Cliente
                                            </th>
                                            <th class="text-center">
                                                MTX
                                            </th>

                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model)
                                        {


                            <tr class="pr-td">
                                <td style="width:10%;">Descrição</td>
                                @if (item.PRODUTO_DESCRICAO == null || item.Descricao_INTERNO == null)
                                {
                <td style="text-align:left; width:45%;">
                    @Html.DisplayFor(modelItem => item.PRODUTO_DESCRICAO)
                </td> }
                                else
                                {
                                    if (item.PRODUTO_DESCRICAO != item.Descricao_INTERNO)
                                    {
                <td style="text-align:left; width:45%;" class="pr-td-maior">
                    @Html.DisplayFor(modelItem => item.PRODUTO_DESCRICAO)
                </td> }
                                    else
                                    {

                <td style="text-align:left; width:45%;" class="pr-td-igual">
                    @Html.DisplayFor(modelItem => item.PRODUTO_DESCRICAO)
                </td>}
                                }




                                <td style="text-align:left; width:45%;">
                                    @Html.DisplayFor(modelItem => item.Descricao_INTERNO)

                                </td>


                            </tr>
                                            <tr class="pr-td">
                                                <td style="width:5%;">CEST</td>
                                                @if (item.PRODUTO_CEST == null || item.Cest_INTERNO == null)
                                                {
                                <td style="text-align:left; width:20%;">
                                    @Html.DisplayFor(modelItem => item.PRODUTO_CEST)
                                </td> }
                                                else
                                                {


                                                    if (item.PRODUTO_CEST != item.Cest_INTERNO)
                                                    {
                                <td style="text-align:left; width:20%;" class="pr-td-maior">
                                    @Html.DisplayFor(modelItem => item.PRODUTO_CEST)
                                </td> }
                                                    else
                                                    {
                                <td style="text-align:left; width:20%;" class="pr-td-igual">
                                    @Html.DisplayFor(modelItem => item.PRODUTO_CEST)
                                </td>}



                                                }



                                                <td style="text-align:left; width:10%;">
                                                    @Html.DisplayFor(modelItem => item.Cest_INTERNO)

                                                </td>

                                            </tr>
                                                            <tr style="border-bottom: 2px solid #ccc;" class="pr-td">
                                                                <td style="width:5%;">NCM</td>
                                                                @if (item.PRODUTO_NCM != item.NCM_INTERNO)
                                                                {
                                                <td style="text-align:left; width:20%;" class="pr-td-maior">
                                                    @Html.DisplayFor(modelItem => item.PRODUTO_NCM)
                                                </td> }
                                                                else
                                                                {
                                                <td style="text-align:left; width:20%;" class="pr-td-igual">
                                                    @Html.DisplayFor(modelItem => item.PRODUTO_NCM)
                                                </td>}


                                                                <td style="text-align:left; width:10%;">
                                                                    @Html.DisplayFor(modelItem => item.NCM_INTERNO)
                                                                </td>

                                                            </tr>}



                                    </tbody>
                                </table><!--fim da tabela-->


                            </div> <!--Fim Segunda caixa-->


                        </div>


                    </div><!--Fim da primeira coluna 12-->

                </div><!--fim da linha-->
                <div class="d-flex">
                    <div class="mr-auto p-2">

                        <p class="pr-fontanternativa">

                            <span class="pr-fontalternativa">Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount - Total de registros: @Model.TotalItemCount</span>
                        </p>
                    </div>

                    <div style="float:right;" class="p-2 pr-fontalternativa">
                        @Html.PagedListPager(
          Model,
          page => Url.Action("TabelaProdutoSN",
          new
          {
              page,
              ordenacao = ViewBag.Ordenacao,
              //filtroCorrente = ViewBag.FiltroCorrente,
              //filtroCorrenteNCM = ViewBag.FiltroCorrenteNCM,
              //filtroCorrenteCest = ViewBag.FiltroCorrenteCest,
              numeroLinhas = ViewBag.NumeroLinhas,
              parFiltro = ViewBag.ParFiltro,
              filtroDados = ViewBag.DadoFiltrar,
              filtroSelect = ViewBag.FiltroSelect
          }),
          new PagedListRenderOptions()
          {
              LiElementClasses = new List<string> { "page-item" }
          })
                    </div>

                </div>
            </div><!--fim do container do body do card-->

        </div><!--Fim do corpo do card-->

    </div><!--fim do card-->


</div><!--fim do container-->
