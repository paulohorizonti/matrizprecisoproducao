            <label class="pr-fontalternativa">Total de Registros</label>
            <label class="form-control form-control-sm">
                <span style="font-weight: bold;">@ViewBag.TotalVendaVarejoConsFinal</span>
            
            </label>

        </div>*@




    </div><!--linha do container do body-->
</div> <!--container do body-->