                                @Html.ValidationMessageFor(m => m.idEmpresa, "", new { @class = "text-danger", role = "alert" })

                            </div>
                            <div class="col-lg-2 mb-3">
                                <label class="pr-fonte-label" for="senha">Senha</label>
                                @Html.PasswordFor(m => m.senha, new { @class = "form-control form-control-sm", name = "senha", placeholder = "Senha" })
                                @Html.ValidationMessageFor(m => m.senha, "", new { @class = "text-danger", role = "alert" })
