                            <div class="col-lg-1 mb-3">
                                <label class="pr-fonte-label" for="numero">Número:</label>
                                @Html.TextBoxFor(m => m.numero, new { @class = "form-control form-control-sm", onkeyup = "maiuscula(this);", placeholder = "Nº", name = "numero" })
