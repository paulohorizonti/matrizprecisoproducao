@model MatrizTributaria.Models.CategoriaProduto
@{
    ViewBag.Title = "CategoriaProduto";
}

<div class="container-fluid pr-container pr-card-cad">
    <div class="card mt-2">
        <div class="card-header">
            Categorias de Produtos - DELETE
            @using (Html.BeginForm("Delete", "CategoriaProduto", new { Id = (int)ViewBag.Id }, FormMethod.Post,   new { @style = "display: initial!important;" }))
            {@Html.AntiForgeryToken()
            <button type="submit" data-toggle="tooltip" data-placement="right" title="Excluir registro selecionado" class="float-lg-right dis-block btn btn-secondary pr-botoes-fundo border-0"> <i style="font-size:1.5em;" class="fas fa-trash-alt"></i></button>
            <a class="float-lg-right dis-blockbtn btn btn-secondary pr-botoes-fundo border-0" data-toggle="tooltip" data-placement="right" title="Cancelar" href="@Url.Action("Index", @ViewBag.Title)"><i style="font-size:1.5em;" class="fas fa-ban"></i></a><!--Novo-->

        }
        </div><!--fim do cabeçalho-->
        <div class="card-body">
            <div class="container-fluid">
               
                <div class="row">
                    <div class="col-12">
                        <div class="container-fluid">
                            @if (ViewBag.Menssagem == "Categoria não pode ser excluída, pertence a um ou mais produtos!!")
                            {


                                <div class="prn-alert alert-danger mt-1" role="alert">
                                    Categoria não pode ser excluída, pertence a um ou mais produtos!!
                                </div>

                            }
                            else
                            {
                                <div class="prn-alert alert-warning mt-1" role="alert">
                                    Deseja realmente excluir esse Registro?
                                </div>
                            }
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()





                                <div class="form-group row mt-4 ">
                                    <div class="col-lg-6">
                                        <div class="form-group row col-lg-12 pl-3 ">
                                            <label class="col-form-label col-lg-2 pl-1 pr-fontalternativa" for="id">Id</label>

                                            <div class="col-lg-2">
                                                @Html.TextBoxFor(m => m.id, new { @class = "form-control pr-fonte", @disabled = "disabled" })
                                            </div>
                                        </div>

                                        <div class="form-group row col-lg-12 pl-3">
                                            <label class="col-form-label col-lg-2 pl-1 pr-fontalternativa" for="descricao">Descrição</label>

                                            <div class="col-lg-6">
                                                @Html.TextBoxFor(m => m.descricao, new { @class = "form-control pr-fonte", @disabled = "disabled" })
                                            </div>



                                        </div>





                                    </div>




                                </div> <!--Fim div-->
                            }


                        </div><!--fim do container da tabela-->
                    </div><!--Fim da coluna de 10-->
                </div><!--fim da linha-->
            </div><!--Fim do container do body do card-->
        </div><!--fim do body do card-->
    </div><!--Fim do card-->
</div><!--Fim do container-->
