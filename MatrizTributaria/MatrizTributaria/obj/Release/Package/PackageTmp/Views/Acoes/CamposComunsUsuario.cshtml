<div class="container-fluid">
    <div class="row">

        <!--Mensagem de salvar-->
        @if (@ViewBag.MensagemGravar != "")
        {
            if (ViewBag.MensagemGravar == "Registro Salvo com Sucesso!!")
            {
                <div class="alert alert-success alert-dismissible fade show form-group col-lg-8 mt-1" role="alert">
                    @if (@ViewBag.RegSalvos != "0")
                    {
                       
                            <span>@ViewBag.MensagemGravar Qtd de Registros Salvos: @ViewBag.RegSalvos</span>
                        
                    }
                   

                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

            }
            else
            {
                <div class="alert alert-warning alert-dismissible fade show form-group col-lg-5 mt-1" role="alert">
                    <span>@ViewBag.MensagemGravar</span>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }


        }
    </div>
    <div class="row">

        <!--Parte de procura-->
        <div class="form-group col-lg-6 p-1">
            <label class="pr-fontalternativa">Usuarios</label>
            <div class="input-group input-group-sm">
                @if (ViewBag.FiltroCorrente == null)
                {
                    @Html.TextBox("ProcurarPor", null, new { @class = "form-control form-control-sm", onkeyup = "maiuscula(this);", placeholder = "Digite o nome do usuario" })
                }
                else
                {
                    @Html.TextBox("ProcurarPor", (string)ViewBag.FiltroCorrente, new { @class = "form-control form-control-sm", onkeyup = "maiuscula(this);", placeholder = "Digite o nome do usuario" })

                }
                <div class="input-group-append">
                    <button data-toggle="tooltip" data-placement="right" title="Localizar" class="btn btn-secondary pr-botoes-fundo" type="submit" id="button-addon2">
                        <i style="font-size:1.3em;" class="fas fa-search"></i>
                    </button>
                </div><!--fim do appende-->
            </div><!--fim div input-->
        </div><!--fim coluna de 5-->

        <div class="form-group col-lg-4 p-1">
            <label class="pr-fontalternativa">Empresa</label>
            <div class="input-group input-group-sm">
                @if (ViewBag.FiltroCorrenteEmpresa == null)
                {
                    @Html.DropDownList("ProcuraEmpresa", new SelectList(ViewBag.Empresas, "id", "fantasia"), "-", new { @class = "form-control form-control-sm dropdown prn-select" })

                    @*@Html.TextBox("ProcuraEmpresa", null, new { @class = "form-control form-control-sm", onkeyup = "maiuscula(this);", placeholder = "Digite a Empresa", id = "empresa" })*@
                }
                else
                {
                    @Html.DropDownList("ProcuraEmpresa", new SelectList(ViewBag.Empresas, "id", "fantasia"), " - ", new { @class = "form-control form-control-sm dropdown prn-select"})

                    @*@Html.TextBox("ProcuraEmpresa", (string)ViewBag.FiltroCorrenteCEST, new { @class = "form-control form-control-sm", onkeyup = "maiuscula(this);", placeholder = "Digite a Empresa", id = "empresa" })*@

                }
                <div class="input-group-append">
                    <button data-toggle="tooltip" data-placement="right" title="Localizar" class="btn btn-secondary pr-botoes-fundo" type="submit" id="button-addonCest">
                        <i style="font-size:1.3em;" class="fas fa-search"></i>
                    </button>
                </div><!--fim do appende-->
            </div><!--fim div input-->
        </div><!--fim coluna 2-->
        


        <div class="form-group col-lg-2 p-1">
            <label class="pr-fontalternativa">Linhas</label>
            <div class="input-group input-group-sm">
                <select class="pr-fontalternativa form-control form-control-sm" id="numeroLinhas" name="numeroLinhas">
                    @if (ViewBag.NumeroLinhas == 10)
                    {

                        <option selected>10</option>
                        <option>20</option>
                        <option>30</option>
                    }
                    else
                    {
                        if (ViewBag.NumeroLinhas == 20)
                        {

                            <option>10</option>
                            <option selected>20</option>
                            <option>30</option>
                        }
                        else
                        {
                            <option>10</option>
                            <option>20</option>
                            <option selected>30</option>

                        }

                    }

                </select>
                <div class="input-group-append">
                    <button data-toggle="tooltip" data-placement="right" title="Localizar" class="btn btn-secondary pr-botoes-fundo" type="submit" id="button-addonLinha">
                        <i style="font-size:1.3em;" class="fas fa-check-circle"></i>
                    </button>
                </div><!--fim do appende-->
            </div><!--fim div input-->
        </div><!--fim coluna 2-->
    </div>

</div>

