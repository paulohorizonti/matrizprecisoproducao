@model MatrizTributaria.Models.ClassificacaoNatReceita

@{ViewBag.Title = "ClassificacaoNatReceita";
}


<div class="container-fluid pr-container pr-card-cad">
    <div class="card mt-2">
        <div class="card-header">
            Cadastro de Classificação de Natureza de Receita - EDITAR
        </div><!--fim do cabeçalho-->
        <div class="card-body">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="container-fluid">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group row">
                                    <div class="col-md-offset-2 col-md-12">
                                        <div style="background-color: ButtonFace; border-radius:0.4em; width:100%;" class="mb-2">
                                            <div id="pr-botoes" class="btn-group border-0" role="group" aria-label="Grupo de botões com dropdown aninhado">
                                                <button type="submit" id="visualizarDados" class="btn btn-secondary pr-botoes-fundo border-0"> <i style="font-size:1.5em;" class="fas fa-save"></i>Salvar</button>
                                                <a href="@Url.Action("Index", "ClassificacaoNatReceita")" class="btn btn-secondary pr-botoes-fundo border-0 "><i style="font-size:1.5em;" class="fas fa-ban"></i>Cancelar</a>


                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">

                                    <div class="col-lg-4 mb-3 ">
                                        <label class="col-form-label col-lg-2 pl-1 pr-fontalternativa" for="codigo">Código</label>
                                      
                                         @Html.TextBoxFor(m => m.Codigo, new { @class = "form-control pr-fonte", @disabled = "disabled" })
                                        
                                    </div>

                                    
                                </div> <!--Fim div-->


                                <div class="form-row">
                                    <div class="col-lg-8 mb-3">
                                        <label class="pr-fonte-label" for="fundlegal">Descrição</label>
                                        @Html.TextBoxFor(m => m.Descricao, new { @class = "form-control form-control-sm", onkeyup = "maiuscula(this);", id = "fundlegal", placeholder = "Digite o fundamento legal" })

                                        @Html.ValidationMessageFor(m => m.Descricao, "", new { @class = "text-danger", role = "alert" })

                                    </div>


                                </div>



                            }


                        </div><!--fim do container da tabela-->
                    </div><!--Fim da coluna de 10-->
                </div><!--fim da linha-->
            </div><!--Fim do container do body do card-->
        </div><!--fim do body do card-->
    </div><!--Fim do card-->
</div><!--Fim do container-->
