@using PagedList.Mvc
@model PagedList.IPagedList<MatrizTributaria.Models.Tributacao>
@{
    ViewBag.Title = "EditAliqIcmsSTVenVarContMassa";
}

<div class="container pr-container pr-card-cad">
    <div class="card mt-2">
        <div class="card-header">
            Alterar Aliquota Icms <strong>ST</strong> Venda Varejo para Contribuinte : Registros  "@ViewBag.Opcao"
            @RenderPage("~/Views/Acoes/BotaoHome.cshtml") <!--Renderiza os botões de ação-->
            <a data-toggle="tooltip" data-placement="right" title="Ir para gráficos" class="float-lg-right dis-block btn btn-secondary pr-botoes-fundo border-0" href="@Url.Action("GraficoIcmsSaida","Tributacao")"><i style="font-size:1.5em;" class="fas fa-chart-pie"></i>  </a>
            <button data-toggle="tooltip" data-placement="right" title="Alterar Selecionado(s)" type="button" id="editarSelecionadosAliqIcmsSTVenVarCont" class="float-lg-right dis-block btn btn-secondary pr-botoes-fundo border-0"> <i style="font-size:1.5em;" class="fas fa-edit"></i></button>

        </div><!--fim do cabeçalho-->
        <div class="card-body">
            <div class="container">

                <div class="row">

                    <div class="col-lg-12">
                        <div class="container-fluid">
                            @using (Html.BeginForm("EditAliqIcmsSTVenVarContMassa", "Tributacao", FormMethod.Get))
                            {
                                @RenderPage("~/Views/Acoes/CamposComuns.cshtml") <!--Renderiza os botões de ação-->


                            }
                            <!--Tabela-->
                            <table style="border-bottom: 1px solid #021e36;" class="table table-striped table-hover table-graficos" id="table-graficosAliqIcmsSTVenVarCont">

                                <thead style="font-size:12px; color:#ffffff; font-weight:100 !important" class="pr-thead">

                                    <tr>
                                        <th class="align-middle">
                                            Id
                                        </th>
                                        <th class="align-middle">
                                            Código de Barras
                                        </th>

                                        <th class="align-middle">
                                            Descrição do Produto
                                        </th>

                                        <th class="align-middle text-center">
                                            Aliquota
                                        </th>


                                        <th class="text-center">
                                            Última alteração
                                        </th>
                                    </tr>
                                </thead>
                                <!--Corpo da Tabela-->
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr class="pr-td">
                                            <td style="width:3%">
                                                @Html.DisplayFor(modelItem => item.id)
                                            </td>
                                            <td style="width:5%">
                                                @Html.DisplayFor(modelItem => item.produtos.codBarras)
                                            </td>
                                            <td style="width:18%">
                                                @Html.DisplayFor(modelItem => item.produtos.descricao)
                                            </td>
                                            <td class="text-center" style="width:5%">
                                                @Html.DisplayFor(modelItem => item.aliqIcmsSTVendaVarejo_Cont)
                                            </td>


                                            <td style="width:5%;" class="text-center">
                                                @Html.DisplayFor(modelItem => item.Data)

                                            </td>

                                        </tr>
                                    }
                                </tbody>

                            </table>
                            <!--Rodape-->
                            <div class="d-flex">
                                <div class="mr-auto p-2">
                                    <p class="pr-fontanternativa">
                                        <span class="pr-fontalternativa"> Página @(Model.PageCount<Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount</span>
                                    </p>
                                </div>

                                <div style="float:right;" class="p-2 pr-fontalternativa">
                                    @Html.PagedListPager(
                                    Model, page => Url.Action("EditAliqIcmsSTVenVarContMassa", new { page, filtroCorrente = ViewBag.FiltroCorrente, filtroCorrenteAliq = ViewBag.FiltroCorrente2, numeroLinhas = ViewBag.NumeroLinhas, opcao = TempData["opcao"].ToString() }),
                                    new PagedListRenderOptions()
                                    {
                                        LiElementClasses = new List<string>
                                        {
                                            "page-item"
                                        }
                                    }

                                    )


                                </div>
                            </div>


                        </div><!--Fim do container da coluna-->
                    </div><!--fim da coluna de 10-->
                </div><!--fim da linha-->


            </div><!--Fim do container do body do card-->
        </div><!--fim do body do card-->
    </div><!--Fim do card-->
</div><!--Fim do container-->
