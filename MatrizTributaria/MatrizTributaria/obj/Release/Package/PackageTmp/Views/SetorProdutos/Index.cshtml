@model IEnumerable<MatrizTributaria.Models.SetorProdutos>
@{
    ViewBag.Title = "SetorProdutos";
}


<div class="container-fluid pr-container pr-card-cad">
    <div class="card mt-2">
        <div class="card-header">
            Cadastro de Setor de Produtos - LISTAGEM
            @RenderPage("~/Views/Acoes/botoes2.cshtml")
        </div><!--fim do cabeçalho-->

        <div class="card-body">
            <div class="container-fluid">
                <div class="row">
                    @*   @RenderPage("~/Views/Acoes/Botoes.cshtml") <!--Renderiza os botões de ação-->*@
                    <div class="col-lg-12">
                        <div class="container-fluid">

                            <table id="tablepr" class="table table table-light table-hover thead-dark table-striped">
                                <thead class="pr-thead">
                                    <tr>
                                        <th>
                                            Id
                                        </th>
                                        <th>
                                            Descrição do Setor
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.id)
                            </td>
                            <td style="width:95%;">
                                @Html.DisplayFor(modelItem => item.descricao)
                            </td>
                        </tr>}

                                </tbody>
                            </table><!--fim da tabela-->


                        </div><!--Fim do container da coluna-->
                    </div><!--Fim da primeira coluna 12-->

                </div><!--fim da linha-->

            </div><!--fim do container do body do card-->

        </div><!--Fim do corpo do card-->

    </div><!--fim do card-->


</div><!--fim do container-->
