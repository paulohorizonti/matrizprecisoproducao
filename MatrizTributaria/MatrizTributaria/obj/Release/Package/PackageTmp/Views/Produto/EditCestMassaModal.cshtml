@{
    ViewBag.Title = "EditCestMassaModal";
}


<div class="container-fluid pr-container pr-card-cad">
    <div class="card mt-2">
        <div class="card-header">
            Alterar CEST de Produtos em Massa
            <a href='javascript:history.go(-1)' data-toggle="tooltip" data-placement="right" title="Voltar à tabela" type="button" id="voltar" class="float-lg-right dis-block btn btn-secondary pr-botoes-fundo border-0"><i style="font-size:1.5em;" class="fas fa-undo"></i></a>

        </div><!--fim do cabeçalho-->

        <div class="card-body">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="container-fluid ml-1 mt-1">
                            <div class="form-group row">

                                <label class="col-form-label col-lg-2 pl-1  pr-fontalternativa" for="linhas">Digite o novo CEST para os produtos abaixo:</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control form-control-sm mt-1" placeholder="Cest aqui" name="cest" id="cest" onkeypress="return onlynumber();" size=10 maxlength=10 />
                                </div>
                                <div class="col-lg-2 ml-1 mt-1">
                                    <button id="salvarCEST" type="submit" class="btn btn-secondary pr-botoes-fundo border-0" data-toggle="tooltip" data-placement="right" title="Salvar CEST em Massa">

                                        <i style="font-size:1.3em;" class="fas fa-save"></i>
                                    </button>
                                </div>


                            </div>


                        </div>
                    </div>

                </div>
                <div class="row">

                    <div class="col-lg-12">
                        <div class="container-fluid">

                            <div class="overflow-auto" style="max-width: 100%; max-height: 500px;">

                                <table id="table-editmassa" class="table table-sm table-striped">
                                    <caption>Produtos que receberão o novo CEST : <label id="lab" /> </caption>
                                    <thead style="font-size:12px; color:#ffffff; font-weight:100 !important" class="pr-thead">
                                        <tr>
                                            <th scope="col">ID</th>
                                            <th scope="col">Código de Barras</th>
                                            <th scope="col">Descrição</th>
                                            <th scope="col">Cest</th>
                                            <th scope="col">NCM</th>
                                            <th scope="col"  class="text-center">Última alteração</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in ViewBag.Produtos)
                                        {
                                        <tr class="pr-td sel">
                                            <td style="width:5%">
                                                @item.Id

                                            </td>
                                            <td style="width:10%">
                                                @item.codBarras

                                            </td>
                                            <td style="width:20%;">
                                                @item.descricao
                                            </td>
                                            <td style="width:15%;">
                                                @item.cest
                                            </td>
                                            <td style="width:15%;">
                                                @item.ncm
                                            </td>
                                            <td style="width:10%;"  class="text-center">
                                                @item.Data
                                            </td>
                                        </tr>
                                        }

                                    </tbody>
                                </table>


                            </div>


                        </div><!--Fim do container da coluna-->
                    </div><!--Fim da primeira coluna 12-->

                </div><!--fim da linha-->

            </div><!--fim do container do body do card-->

        </div><!--Fim do corpo do card-->

    </div><!--fim do card-->


</div><!--fim do container-->
