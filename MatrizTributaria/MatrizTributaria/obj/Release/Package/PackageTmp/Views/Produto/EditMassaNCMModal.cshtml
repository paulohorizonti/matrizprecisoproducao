                                            <input type="text" class="form-control form-control-sm decimal" name="alVeVarCFSt" id="alVeVarCFSt" style="min-width:100%;" placeholder="Digite Aliquota (%)" readonly />

                                        </div>
                                        <div class="col-lg-2">
                                            <label class="pr-fonte-label" for="rBcVeVarCF">Red.Base Calc ICMS </label>
                                            <input type="text" class="form-control form-control-sm decimal" name="rBcVeVarCF" id="rBcVeVarCF" style="min-width:100%;" placeholder="Digite Aliquota (%)" readonly />

