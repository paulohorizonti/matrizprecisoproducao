            </div>
        </div>*@
    <div class="modal fade" id="modalTrocarSenha" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel" style="color:#a7291d; font-weight:900;">Alteração de senha</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                @using (Html.BeginForm("SenhaAlterar", "Home", FormMethod.Post, new { @class = "user" }))
                {
                    <div class="modal-body">

                        <!--Pedir pra digitar o email-->
                        <div class="container-fluid">


                            <div class="row">
                                <div class="form-group col-lg-12 p-1">
                                    <label class="pr-fontalternativa">E-Mail do Usuário</label>
                                    <div class="input-group input-group-sm">
                                        <input class="form-control form-control-sm" type="text" placeholder="Digite seu e-mail" id="emailUsu" name="emailUsu" />
                                    </div>
                                </div>
                            </div>

                        </div>

                        <p><h3 class="pr-fonte-label" style="color:#a7291d; font-weight:600;">Informe o e-mail usado para cadastro de usuário.</h3></p>
                        <p><h3 class="pr-fonte-label" style="color:#a7291d; font-weight:600;">Uma senha provisória sera encaminhada e deverá ser alterada no primeiro acesso.</h3></p>
                    </div>

                <div class="modal-footer">
                    <button type="submit" style="border-radius: 10rem;" class="btn btn-primary pr-login-salvar"><span style="font-weight:500;">Enviar</span></button>

                    <button type="button" style="border-radius: 10rem;" class="btn btn-secondary pr-btn-login-close" data-dismiss="modal">Fechar</button>

                </div>
                }
            </div>
        </div>
    </div>


    @if (ViewBag.Message == "PRIMEIRO ACESSO")
    {
        <script>
            function abreModal() {
                $("#modalPrimeiroAcesso").modal({
                    show: true
                });
            }

            setTimeout(abreModal, 1000);
        </script>
    }

    <!--Modal Primeiro acesso-->
    <div class="modal fade" id="modalPrimeiroAcesso" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" style="max-width:300px !important;">
            <div class="modal-content">
                <div class="modal-header">
                    <span class="modal-title" id="exampleModalLabel" style="color:#a7291d; font-weight:900;">Alteração de senha</span><br />


                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                @using (Html.BeginForm("LoginAlterar", "Home", FormMethod.Post, new { @class = "user" }))
                {
                    <div class="modal-body">
                        @if (ViewBag.Message == "As senhas digitadas não são iguais!")
                        {
                            <div id="alerta-modal" class="alert alert-danger alert-dismissible fade show" role="alert">
                                @ViewBag.Message
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        }
                        @if (ViewBag.Message == "Senha provisória incorreta")
                        {
                            <div id="alerta-modal" class="alert alert-danger alert-dismissible fade show" role="alert">
                                @ViewBag.Message
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        }

                        <input type="hidden" name="identif" value="@ViewBag.Identificador" id="identif" />
                        <div class="container-fluid">


                            <div class="row">
                                <div class="form-group col-lg-12 p-1">
                                    <label class="pr-fontalternativa">Senha Provisória</label>
                                    <div class="input-group input-group-sm">
                                        <input class="form-control form-control-sm" type="password" placeholder="Digite a sua senha provisória" id="senhaProv" name="senhaProv" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-lg-12 p-1">
                                    <label class="pr-fontalternativa">Nova Senha</label>
                                    <div class="input-group input-group-sm">
                                        <input class="form-control form-control-sm" type="password" placeholder="Digite sua nova senha" id="novaSenha" name="novaSenha" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-lg-12 p-1">
                                    <label class="pr-fontalternativa">Repita a Nova Senha</label>
                                    <div class="input-group input-group-sm">
                                        <input class="form-control form-control-sm" type="password" placeholder="Repita sua nova senha" id="senhaRep" name="senhaRep" />
                                    </div>
                                </div>
                            </div>



                        </div>




                    </div>
                    <div class="modal-footer">
                        <button type="submit" style="border-radius: 10rem;" class="btn btn-primary pr-login-salvar"><span style="font-weight:500;">Salvar</span></button>

                        <button type="button" style="border-radius: 10rem;" class="btn btn-secondary pr-btn-login-close" data-dismiss="modal">Fechar</button>

                    </div>
                }
            </div>
        </div>
    </div>


    @Scripts.Render("~/bundles/login")
    <script>
        function tiraMsg() {

            document.getElementById("alerta").style.display = 'none';

        }
        function colocaMsg() {

            document.getElementById("alerta").style.display = 'block';
        }
    </script>

    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $(".alert").fadeOut("slow", function () {

                    $(this).alert('close');
                });

            }, 5000);
        });
    </script>
</body>
</html>
